<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MyInfoActivity"
    android:background="@drawable/myinfo_bg"
    android:orientation="vertical"
    >

    <com.example.locationsystem.SelfDesignComponent.DragFloatActionButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/header_image"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        />
    <TableLayout
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        >
        <TableRow
            android:layout_weight="1"
            >
            <TextView
                android:text="用户名:"
                android:textSize="25dp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/myinfo_usernameTV"
                android:textSize="25dp"
                android:textColor="#000000"
                />

        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:text="密码:"
                android:textSize="25dp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/myinfo_passwordTV"
                android:textSize="25dp"
                android:textColor="#000000"
                />
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/display_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/exit_btn_round"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="查看可导航地点"
        />
    <Button
        android:id="@+id/exit_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/exit_btn_round"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="退出登录"
        />

</LinearLayout>